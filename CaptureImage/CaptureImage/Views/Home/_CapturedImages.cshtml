@{
}
@model List<CapturedImagesModel>

@if (Model != null && Model.Count > 0)
{

    <div class="col-md-12">
        <div class="row">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="col-md-4">
                    <img src='@Url.Content("~/CameraImages/"+Model[i].Path)' style="width:100%" />
                </div>
            }
        </div>
    </div>

}
else
{
    <div class="row">
        <div class="col-md-12">
            <div class="text-danger">No image(s) found.</div>
        </div>
    </div>
}
